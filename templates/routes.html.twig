{% extends "base.html.twig" %}

{% block title %}API Routes{% endblock %}

{% block body %}
    <div class="center form">
        <h1>API Routes</h1><br>
        <p>
            Följande är routes till sidans JSON sidor:
        </p>
        <br>
        <label>Denna sida visar 3 slumpade citat</label>
        <a class="button large link-no-decor" href="{{ path('quote') }}">
            <p>Quotes</p>
        </a>
        <a class="button large link-no-decor" href="{{ path('deck') }}">
            <p>JSON card deck</p>
        </a>
        <form class="large" method="POST" action="{{ path('shuffleDeck') }}">
            <button class="button fill-available link-no-decor">
                <p>JSON card deck shuffle</p>
            </button>
        </form>
        <form class="large" method="POST" action="{{ path('deckDraw') }}">
            <button class="button fill-available link-no-decor">
                <p>JSON deck draw 1 card</p>
            </button>
        </form>
        <form class="large" method="POST" action="{{ path('deckDrawNum', {'num': 1}) }}">
            <br><p>Enter a number to draw that number of cards:</p>
            <input type="number" min="0" name="num" class="fill-available"><br>

            <button class="button fill-available link-no-decor">
                <p>Submit</p>
            </button>
        </form>
        <a class="button large link-no-decor" href="{{ path('game') }}">
            <p>JSON blackjack status</p>
        </a>

        <h1>Library API</h1>
        <a class="button large link-no-decor" href="{{ path('library_api_books') }}">
            <p>JSON All library books</p>
        </a><br>
        <form class="large" method="POST" action="{{ path('api_library_read_one_twig') }}">
            <br><p>Enter an ISBN for one of the books in the library:</p>
            <input type="number" min="0" name="isbn" class="fill-available"><br>

            <label>The Fellowship of the Ring: 9780261102354</label>
            <button class="button fill-available link-no-decor">
                <p>Submit</p>
            </button>
        </form>
    </div>
{% endblock %}
