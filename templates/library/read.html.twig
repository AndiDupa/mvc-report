{% extends 'base.html.twig' %}

{% block title %}Read many!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="center">
        <h1>All books</h1>
    </div>
    <ul class="book-ul">
        {% for book in books %}
            <li class="book-li">
                <div class="book">
                    <img class="book-img" src="{{book.getImage()}}" alt="Book cover"></img>
                    <h4>{{book.getTitle()}}</h4>
                    <p>{{book.getAuthor()}}</p>
                    <p>{{book.getISBN()}}</p>

                    <form method="POST" action="{{ path('library_update_landing') }}">
                        <input hidden="true" name="book_id" value="{{book.getId()}}">
                        <input class="button" type="submit" name="do_it" value="Update book">
                    </form>

                    <form method="POST" action="{{ path('library_delete_by_id') }}">
                        <input hidden="true" name="book_id" value="{{book.getId()}}">
                        <input class="button red" type="submit" name="do_it" value="Delete book">
                    </form>
                </div>
            </li>
        {% endfor %}
    </ul>
</form>
</div>
{% endblock %}
